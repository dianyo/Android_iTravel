<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblue"
     >

        <TextView
            android:id="@+id/textView_object"
            android:layout_width="120dp"
            android:layout_height="42dp"
            android:gravity="center_vertical"
            android:textSize="23sp"
            android:layout_alignParentLeft="true"
            android:text="Large Text"
             />

        <ImageButton
            android:id="@+id/imageButton_clear"
            android:layout_width="30dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/blueviolet"
            android:src="@drawable/ic_action_remove" />

        <ImageButton
            android:id="@+id/imageButton_minus"
            android:layout_width="30dp"
            android:layout_height="42dp"
            android:background="@color/mediumaquamarine"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imageButton_clear"
            android:src="@drawable/ic_remove_white_24dp" />

        <ImageButton
            android:id="@+id/imageButton_add"
            android:layout_width="30dp"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imageButton_minus"
            android:background="@color/cadetblue"
            android:src="@drawable/ic_action_new" />

        <EditText
            android:id="@+id/editText_money"
            android:layout_width="100dp"
            android:layout_height="42dp"
            android:layout_alignBaseline="@+id/textView_object"
            android:layout_alignBottom="@+id/textView_object"
            android:layout_toLeftOf="@+id/imageButton_add"
            android:ems="10"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:singleLine="true"
            android:inputType="number" />

    </RelativeLayout>
